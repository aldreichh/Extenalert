{
  "manifest_version": 3,
  "name": "ExtenAlert!",
  "version": "1.0.0",
  "description": "Malicious activity detection and Real-time protection",
  "icons":{
    "32": "logo192.png",
    "48": "logo192.png",
    "128": "logo192.png"
  },
  "action": {
    "default_popup": "index.html"
  },
  "background": { 
    "service_worker": "background.js"
  },
  "permissions": [
    "notifications",
    "tabs",
    "storage",
    "activeTab",
    "scripting",
    "webNavigation",
    "downloads",
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' http://localhost:5000; object-src 'self'"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentscript.js"]
    }
  ]
}
